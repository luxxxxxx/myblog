        //  		}
        //  		if (!femail) {
        //  			$msg.html('请输入一个有效的邮箱地址');
        //  		}
        //  	}
    })

    $email.bind('keyup', function () {
        let email = $(this).val(),
            $msg = $errMsgs.eq(3),
            reg = /^[0-9a-zA-Z]\w+(@\w+\.[a-zA-Z]{2,})$/;
        if (!reg.test(email)) {
            $msg.html('请输入一个有效的邮箱地址');
            femail = false;
            emailble();
        } else {
            $msg.html('');
            femail = true;
            emailble();
        }
    }).bind('blur',function () {
        let reg = /^[0-9a-zA-Z]\w+(@\w+\.[a-zA-Z]{2,})$/,
            $msg = $errMsgs.eq(3),
            email = $(this).val();
        if (reg.test(email)) {
            femail = true;
            $msg.html('');
            emailble();
        }
    })



